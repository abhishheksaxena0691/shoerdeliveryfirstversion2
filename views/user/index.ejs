                                <i
                                  class="fa fa-rupee rupee-icon"
                                  style="color: green"
                                ></i>
                                <%} else if(brochureList[itr].paymentStatus === 'PAID BY CASH'){%>
                                <i
                                  class="fa fa-rupee rupee-icon"
                                  style="color: green"
                                ></i>
                                <!--i class="fa fa-money rupee-icon" style="color: green"></i-->
                                <%}%>
                                
                              </div>
                              <div class="right">
                                <h3 class="bname">
                                  <%=brochureList[itr].username%>
                                  <small
                                    ><%=brochureDate +" " +
                                    brochureTime%></small
                                  >
                                </h3>
                                <p class="blistname"><%=brochureList[itr].name%>
                                  <a class="forward-icon" ><i class="fa fa-share-square"></i></a>
                                </p>
                                
                              </div>
                            </div>
                          </a>
                          <%}%>
                        </div>
                      </div>

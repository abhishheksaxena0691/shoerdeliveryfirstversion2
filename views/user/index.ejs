                            <div class="mail_list">
                              <div class="left">
                                <span class="email-head"><%=brochureList[itr].username[0]%></span>
                                <%if(brochureList[itr].paymentStatus === 'PENDING'){%>
                                <!--i
                                  class="fa fa-rupee rupee-icon"

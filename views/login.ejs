<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= title %></title>
    <base href="<%= relPath %>" />

    <!-- Bootstrap -->
    <link href="vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="vendors/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="vendors/animate.css/animate.min.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="css/custom.css" rel="stylesheet" />
  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <div class="logo-img">
              <img src="images/tree.png" />
              <h1>Acme Shoes</h1>
            </div>
            <form id="loginForm" action="auth/login" method="GET">
              <!-- <h1>Login</h1> -->
              <div class="input-field">
                <input
                  type="text"
                  class="form-control"
                  name="emailOrMobile"
                  placeholder="Email or Phone Number"
                  required=""
                />

                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Password"
                  required=""
                />

                <button class="btn btn-default submit" id="loginSubmitBtn">
                  Login <i class="fa fa-lock"></i>
                </button>
                <!--a class="reset_pass" href="#">Lost your password?</a-->
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">
                  New to site?
                  <a href="#signup" class="to_register"> Create Account </a>
                </p>

                <div class="clearfix"></div>
                <br />
              </div>
            </form>
            <div class="testimonials">Testimonials</div>
          </section>
        </div>

        <div id="register" class="animate form registration_form">
          <section class="login_content">
            <div class="logo-img">
              <img src="images/tree.png" />
              <h1>Acme Shoes</h1>
            </div>
            <form id="signupForm" action="auth/signup" method="GET">
              <div class="input-field">
                <input
                  type="text"
                  class="form-control"
                  name="fullname"
                  placeholder="Full Name"
                />

                <input
                  type="email"
                  class="form-control"
                  name="email"
                  placeholder="Email"
                  required=""
                />

                <input
                  type="text"
                  class="form-control"
                  name="mobile"
                  placeholder="Phone Number"
                  maxlength="10"
                  required=""
                />

                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Password"
                  required=""
                />

                <input
                  type="password"
                  class="form-control"
                  name="repassword"
                  placeholder="Confirm Password"
                  required=""
                />

                <button class="btn btn-default submit" id="signupSubmitBtn">
                  Sign up <i class="fa fa-user-plus"></i>
                </button>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">
                  Already a member ?
                  <a href="#signin" class="to_register"> Log in </a>
                </p>

                <div class="clearfix"></div>
                <br />
              </div>
            </form>
            <div class="testimonials">Testimonials</div>
          </section>
        </div>
      </div>
    </div>
    <script src="vendors/jquery/dist/jquery.min.js"></script>
    <script src="js/login.js"></script>
  </body>
</html>
